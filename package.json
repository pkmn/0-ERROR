{
  "main": "build/pkg/index.js",
  "types": "build/pkg/index.d.ts",
  "repository": "github:pkmn/0-ERROR",
  "dependencies": {
    "@pkmn/engine": "file:lib/pkmn"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.19.4",
    "@babel/preset-typescript": "^7.18.6",
    "@pkmn/eslint-config": "^2.11.0",
    "@pkmn/data": "^0.5.28",
    "@pkmn/sim": "^0.5.28",
    "@types/jest": "^29.2.0",
    "@types/minimist": "^1.2.2",
    "@types/node": "^18.11.0",
    "@typescript-eslint/eslint-plugin": "^5.40.1",
    "@typescript-eslint/parser": "^5.40.1",
    "eslint": "^8.25.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^27.1.3",
    "jest": "^29.2.1",
    "minimist": "^1.2.7",
    "source-map-support": "^0.5.21",
    "typescript": "^4.8.4"
  },
  "scripts": {
    "lint": "eslint --cache src --ext ts,js",
    "fix": "eslint --fix src --ext ts,js",
    "compile": "tsc -p .",
    "build": "npm run compile",
    "test": "jest",
    "postinstall": "npm -C lib/pkmn install --ignore-scripts && npm -C lib/pkmn run compile"
  },
  "jest": {
    "collectCoverageFrom": [ "src/pkg/*.ts"],
    "coverageDirectory": "coverage/js",
    "coverageProvider": "v8",
    "verbose": false,
    "testEnvironment": "node",
    "testPathIgnorePatterns": ["node_modules/", "build/", "lib/"],
    "moduleNameMapper": {
      "^@pkmn/sim/(.*)$": "<rootDir>/node_modules/@pkmn/sim/build/sim/$1"
    }
  },
  "babel": {
    "presets": [
        "@babel/preset-typescript",
        ["@babel/preset-env", {"targets": {"node": "current"}}]
    ]
  },
  "eslintConfig": {
    "extends": "@pkmn"
  }
}
